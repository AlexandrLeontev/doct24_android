<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginBottom="?attr/actionBarSize">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

            <ImageView
                android:id="@+id/imageView6"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="fitStart"
                android:src="@drawable/ic_doctor_feedback_bkg" />

            <Space
                android:id="@+id/spaceDoctorFeedbackFragment"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/doctorFeedbackBackButton"
                style="@style/Widget.MaterialComponents.Button.TextButton.Icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:elevation="0dp"
                android:text="@string/backToDoctorProfile"
                android:textColor="@color/mainGreen"
                android:textSize="@dimen/defTextSize"
                app:icon="@drawable/ic_baseline_arrow_back"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/spaceDoctorFeedbackFragment" />

            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/doctorProfilePhoto"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_marginStart="35dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/doctorFeedbackBackButton"
                app:shapeAppearanceOverlay="@style/circleImageView" />

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/doctorFeedbackBackGuideline"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintGuide_percent="0.46" />

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/doctorProfileName"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="@string/doctorName"
                android:textColor="@color/headlineColor"
                android:textSize="@dimen/titleSize"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@id/doctorFeedbackBackGuideline"
                app:layout_constraintTop_toTopOf="@id/doctorProfilePhoto"
                app:layout_constraintBottom_toTopOf="@+id/doctorProfileSpecInput"/>

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/doctorProfileSpecInput"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="@string/doctorSpecialityInput"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@id/doctorFeedbackBackGuideline"
                app:layout_constraintTop_toBottomOf="@id/doctorProfileName" />

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/yourRating"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:text="Ваша оценка"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="16dp"
                app:layout_constraintTop_toBottomOf="@+id/doctorProfilePhoto"
                android:layout_marginTop="44dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/yourRating">

                <androidx.appcompat.widget.AppCompatRatingBar
                    android:id="@+id/doctorFeedbackRatingBar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:rating="4.0"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/yourRating" />

                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/professionalText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="24dp"
                    android:text="Профессиональные качества врача"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/doctorFeedbackRatingBar" />

                <com.google.android.material.textview.MaterialTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/professionality"
                    android:textColor="@color/basicGrey"
                    android:textSize="12sp" />

                <com.google.android.material.card.MaterialCardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="15dp">

                    <com.google.android.material.progressindicator.LinearProgressIndicator
                        android:id="@+id/progressProfessionalism"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        app:indicatorColor="@color/progressBarColor"
                        app:trackThickness="16dp"
                        android:backgroundTint="@color/secondaryBlue" />
                </com.google.android.material.card.MaterialCardView>


                <com.google.android.material.textview.MaterialTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingTop="@dimen/cardMargin"
                    android:text="@string/responsibility"
                    android:textColor="@color/basicGrey"
                    android:textSize="12sp" />

                <com.google.android.material.card.MaterialCardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="15dp">

                    <com.google.android.material.progressindicator.LinearProgressIndicator
                        android:id="@+id/progressResponsibility"
                        app:trackCornerRadius="15dp"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        app:indicatorColor="@color/progressBarColor"
                        app:trackThickness="16dp"
                        android:backgroundTint="@color/secondaryBlue" />
                </com.google.android.material.card.MaterialCardView>


                <com.google.android.material.textview.MaterialTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingTop="@dimen/cardMargin"
                    android:text="@string/accurasy"
                    android:textColor="@color/basicGrey"
                    android:textSize="12sp" />

                <com.google.android.material.card.MaterialCardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="15dp">

                    <com.google.android.material.progressindicator.LinearProgressIndicator
                        android:id="@+id/progressAttentiveness"
                        app:trackCornerRadius="15dp"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        app:indicatorColor="@color/progressBarColor"
                        app:trackThickness="16dp"
                        android:backgroundTint="@color/secondaryBlue" />
                </com.google.android.material.card.MaterialCardView>

                <com.google.android.material.textview.MaterialTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingTop="@dimen/cardMargin"
                    android:text="@string/punctuality"
                    android:textColor="@color/basicGrey"
                    android:textSize="12sp" />

                <com.google.android.material.card.MaterialCardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="15dp">

                    <com.google.android.material.progressindicator.LinearProgressIndicator
                        android:id="@+id/progressPunctuality"
                        app:trackCornerRadius="15dp"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        app:indicatorColor="@color/progressBarColor"
                        app:trackThickness="16dp"
                        android:backgroundTint="@color/secondaryBlue" />
                </com.google.android.material.card.MaterialCardView>

                <com.google.android.material.textview.MaterialTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:text="Отзыв"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/progressPunctuality" />

                <com.google.android.material.textview.MaterialTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:hint="0/1000 символов"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/progressPunctuality" />

                <androidx.cardview.widget.CardView
                    android:id="@+id/doctorFeedbackText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="44dp"
                    android:backgroundTintMode="screen"
                    app:cardCornerRadius="10dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/progressPunctuality">

                    <com.google.android.material.textview.MaterialTextView
                        android:id="@+id/doctorFeedbackTextInput"
                        android:layout_width="match_parent"
                        android:layout_height="150dp"
                        android:text="\n123 \n123 \n \n " />
                </androidx.cardview.widget.CardView>


                <com.google.android.material.button.MaterialButton
                    android:id="@+id/sendFeedbackButton"
                    style="@style/Widget.MaterialComponents.Button"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/defaultPadding"
                    android:text="@string/sendFeedback"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    app:cornerRadius="15dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/doctorFeedbackText" />
            </LinearLayout>


        </androidx.constraintlayout.widget.ConstraintLayout>


    </androidx.core.widget.NestedScrollView>


</FrameLayout>