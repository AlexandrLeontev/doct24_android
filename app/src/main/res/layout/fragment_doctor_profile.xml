<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginBottom="?attr/actionBarSize"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="fitStart"
        android:src="@drawable/doctor_profile_bkg"/>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="@dimen/defaultPadding">

            <Space
                android:id="@+id/spaceDoctorFragment"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"/>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/doctorProfileBackButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/Widget.MaterialComponents.Button.TextButton.Icon"
                app:icon="@drawable/ic_baseline_arrow_back_24"
                android:elevation="0dp"
                android:text="@string/backToDoctorsList"
                android:textColor="@color/mainGreen"
                android:textSize="@dimen/defTextSize"
                app:layout_constraintTop_toBottomOf="@id/spaceDoctorFragment"
                app:layout_constraintStart_toStartOf="parent" />

            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/doctorProfilePhoto"
                android:layout_width="120dp"
                android:layout_height="120dp"
                app:shapeAppearanceOverlay="@style/circleImageView"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/doctorProfileBackButton"/>

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/doctorProfileGuideline"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintGuide_percent="0.46" />

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/doctorProfileName"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Петров Александр Федорович"
                android:textSize="@dimen/titleSize"
                android:textColor="@color/headlineColor"
                android:textStyle="bold"
                app:layout_constraintTop_toTopOf="@id/doctorProfilePhoto"
                app:layout_constraintStart_toEndOf="@id/doctorProfileGuideline"
                app:layout_constraintEnd_toEndOf="parent"/>

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/doctorProfileAge"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Возраст: "
                android:textStyle="bold"
                app:layout_constraintTop_toBottomOf="@id/doctorProfileName"
                app:layout_constraintStart_toEndOf="@id/doctorProfileGuideline"
                android:layout_marginTop="@dimen/defaultPadding"/>

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/doctorProfileAgeInput"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="36"
                app:layout_constraintTop_toBottomOf="@id/doctorProfileName"
                app:layout_constraintStart_toEndOf="@id/doctorProfileAge"
                android:layout_marginTop="@dimen/defaultPadding"/>

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/doctorProfileSpec"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Специализация: "
                android:textStyle="bold"
                android:layout_marginTop="@dimen/cardMargin"
                app:layout_constraintTop_toBottomOf="@id/doctorProfileAge"
                app:layout_constraintStart_toEndOf="@id/doctorProfileGuideline"
                app:layout_constraintEnd_toEndOf="parent"
                />

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/doctorProfileSpecInput"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Гастроэнтеролог, аллерголог"
                app:layout_constraintTop_toBottomOf="@id/doctorProfileSpec"
                app:layout_constraintStart_toEndOf="@id/doctorProfileGuideline"
                app:layout_constraintEnd_toEndOf="parent"
                />

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/doctorProfileLocation"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Местоположение:"
                android:textStyle="bold"
                android:layout_marginTop="@dimen/cardMargin"
                app:layout_constraintTop_toBottomOf="@id/doctorProfileSpecInput"
                app:layout_constraintStart_toEndOf="@id/doctorProfileGuideline"
                app:layout_constraintEnd_toEndOf="parent" />

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/doctorProfileLocationInput"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Россия, Москва"
                app:layout_constraintTop_toBottomOf="@id/doctorProfileLocation"
                app:layout_constraintStart_toEndOf="@id/doctorProfileGuideline"
                app:layout_constraintEnd_toEndOf="parent" />

            <androidx.viewpager.widget.ViewPager
                android:id="@+id/doctorProfileVewPager"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/defaultPadding"
                app:layout_constraintTop_toBottomOf="@id/doctorProfileLocationInput"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent">
                <androidx.viewpager.widget.PagerTabStrip
                    android:id="@+id/doctorProfilePagerTab"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
            </androidx.viewpager.widget.ViewPager>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.core.widget.NestedScrollView>
</FrameLayout>