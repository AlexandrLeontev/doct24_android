            <!--                    android:layout_width="match_parent"-->
            <!--                    android:layout_height="wrap_content" />-->
            <!--            </androidx.viewpager.widget.ViewPager>-->

            <androidx.viewpager.widget.ViewPager
                android:id="@+id/doctorProfileVewPager"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="16dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/doctorProfileLocationInput">

                <androidx.viewpager.widget.PagerTabStrip
                    android:id="@+id/doctorProfilePagerTab"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
            </androidx.viewpager.widget.ViewPager>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/doctorProfileAppointment"
                style="@style/Widget.MaterialComponents.Button.TextButton.Icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/appointmentText"
                android:textStyle="bold"
                app:layout_constraintEnd_toStartOf="@id/doctorProfileAbout"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/doctorProfileVewPager" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/doctorProfileAbout"
                style="@style/Widget.MaterialComponents.Button.TextButton.Icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/aboutDoctor"
                android:textStyle="bold"
                app:layout_constraintBottom_toTopOf="@id/doctorProfileContainer"
                app:layout_constraintEnd_toStartOf="@id/doctorProfileFeedback"
                app:layout_constraintStart_toEndOf="@id/doctorProfileAppointment"
                app:layout_constraintTop_toBottomOf="@id/doctorProfileVewPager" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/doctorProfileFeedback"
                style="@style/Widget.MaterialComponents.Button.TextButton.Icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/doctorFeedback"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@id/doctorProfileAbout"
                app:layout_constraintTop_toBottomOf="@id/doctorProfileVewPager" />

            <include
                android:id="@+id/doctorProfileContainer"
                layout="@layout/fragment_vp_doctor_profile_about"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/doctorProfileAbout" />


        </androidx.constraintlayout.widget.ConstraintLayout>


    </androidx.core.widget.NestedScrollView>
</FrameLayout>