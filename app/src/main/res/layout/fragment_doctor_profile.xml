<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginBottom="?attr/actionBarSize">


    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/ic_doctor_s_profile_bkg"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />
            <!--                android:scaleType="fitStart"-->

            <Space
                android:id="@+id/spaceDoctorFragment"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/doctorProfileBackButton"
                style="@style/Widget.MaterialComponents.Button.TextButton.Icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="15sp"
                android:elevation="0dp"
                android:text="@string/backToDoctorsList"
                android:textColor="@color/mainGreen"
                android:textSize="@dimen/defTextSize"
                app:icon="@drawable/ic_arrow_2"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/spaceDoctorFragment" />

            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/doctorProfilePhoto"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:layout_marginStart="25sp"
                android:layout_marginTop="30sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/doctorProfileBackButton"
                app:shapeAppearanceOverlay="@style/circleImageView" />

            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/doctorProfileLikeDoctor"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_favorite_mark"
                app:layout_constraintBottom_toBottomOf="@id/doctorProfilePhoto"
                app:layout_constraintStart_toStartOf="@id/doctorProfilePhoto" />

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/doctorProfileGuideline"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintGuide_percent="0.46" />

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/doctorProfileName"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="@string/doctorName"
                android:textColor="@color/headlineColor"
                android:textSize="@dimen/titleSize"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@id/doctorProfileGuideline"
                app:layout_constraintTop_toTopOf="@id/doctorProfilePhoto" />

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/doctorProfileAge"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/defaultPadding"
                android:text="@string/doctorAge"
                android:textStyle="bold"
                app:layout_constraintStart_toEndOf="@id/doctorProfileGuideline"
                app:layout_constraintTop_toBottomOf="@id/doctorProfileName" />

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/doctorProfileAgeInput"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:layout_marginTop="@dimen/defaultPadding"
                android:text="@string/doctorAgeInput"
                app:layout_constraintStart_toEndOf="@id/doctorProfileAge"
                app:layout_constraintTop_toBottomOf="@id/doctorProfileName" />

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/doctorProfileSpec"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/cardMargin"
                android:text="@string/doctorSpeciality"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@id/doctorProfileGuideline"
                app:layout_constraintTop_toBottomOf="@id/doctorProfileAge" />

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/doctorProfileSpecInput"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="@string/doctorSpecialityInput"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@id/doctorProfileGuideline"
                app:layout_constraintTop_toBottomOf="@id/doctorProfileSpec" />

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/doctorProfileLocation"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/cardMargin"
                android:text="@string/doctorLocation"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@id/doctorProfileGuideline"
                app:layout_constraintTop_toBottomOf="@id/doctorProfileSpecInput" />

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/doctorProfileLocationInput"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="@string/doctorLocationInput"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@id/doctorProfileGuideline"
                app:layout_constraintTop_toBottomOf="@id/doctorProfileLocation" />


            <!--            <com.google.android.material.tabs.TabLayout-->
            <!--                android:id="@+id/tabs"-->
            <!--                android:layout_width="match_parent"-->
            <!--                android:layout_height="wrap_content"-->
            <!--                app:layout_constraintEnd_toEndOf="parent"-->
