            <!--                <com.google.android.material.tabs.TabItem-->
            <!--                    android:id="@+id/doctorProfileAppointmentTab"-->
            <!--                    android:layout_width="wrap_content"-->
            <!--                    android:layout_height="wrap_content"-->
            <!--                    android:text="@string/appointmentText" />-->

            <!--                <com.google.android.material.tabs.TabItem-->
            <!--                    android:id="@+id/doctorProfileAboutTab"-->
            <!--                    android:layout_width="wrap_content"-->
            <!--                    android:layout_height="wrap_content"-->
            <!--                    android:text="@string/aboutDoctor" />-->

            <!--                <com.google.android.material.tabs.TabItem-->
            <!--                    android:id="@+id/doctorProfileFeedbackTab"-->
            <!--                    android:layout_width="wrap_content"-->
            <!--                    android:layout_height="wrap_content"-->
            <!--                    android:text="@string/doctorFeedback" />-->
            <!--            </com.google.android.material.tabs.TabLayout>-->

            <!--            <androidx.viewpager.widget.ViewPager-->
            <!--                android:id="@+id/doctorProfileVewPager"-->
            <!--                android:layout_width="match_parent"-->
            <!--                android:layout_height="wrap_content"-->
            <!--                android:paddingTop="16dp"-->
            <!--                app:layout_constraintEnd_toEndOf="parent"-->
            <!--                app:layout_constraintStart_toStartOf="parent"-->
