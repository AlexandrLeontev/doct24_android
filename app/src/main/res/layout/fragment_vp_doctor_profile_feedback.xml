<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="@dimen/defaultPadding">

    <com.google.android.material.card.MaterialCardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <androidx.appcompat.widget.AppCompatRatingBar
            android:id="@+id/doctorProfileRatingBar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:rating="3"
            style="@style/Widget.AppCompat.RatingBar.Indicator"
            android:theme="@style/MyRatingBar"



             />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/doctorProfileRatingText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end|center"
            android:layout_marginStart="250dp"
            android:text="3/5"
            android:textSize="25sp" />
    </com.google.android.material.card.MaterialCardView>

    <com.google.android.material.textview.MaterialTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/professionality"
        android:textColor="@color/basicGrey"
        android:textSize="12sp" />

    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="15dp">

        <com.google.android.material.progressindicator.LinearProgressIndicator
            android:id="@+id/progressProfessionality"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:backgroundTint="@color/secondaryBlue"
            app:indicatorColor="@color/progressBarColor"
            app:trackCornerRadius="15dp"
            app:trackThickness="16dp" />
    </com.google.android.material.card.MaterialCardView>


    <com.google.android.material.textview.MaterialTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/cardMargin"
        android:text="@string/responsibility"
        android:textColor="@color/basicGrey"
        android:textSize="12sp" />

    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="15dp">

        <com.google.android.material.progressindicator.LinearProgressIndicator
            android:id="@+id/progressResponsibility"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:backgroundTint="@color/secondaryBlue"
            app:indicatorColor="@color/progressBarColor"
            app:trackCornerRadius="15dp"
            app:trackThickness="16dp" />
    </com.google.android.material.card.MaterialCardView>


    <com.google.android.material.textview.MaterialTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/cardMargin"
        android:text="@string/accurasy"
        android:textColor="@color/basicGrey"
        android:textSize="12sp" />

    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="15dp">

        <com.google.android.material.progressindicator.LinearProgressIndicator
            android:id="@+id/progressAccurasy"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:backgroundTint="@color/secondaryBlue"
            app:indicatorColor="@color/progressBarColor"
            app:trackCornerRadius="15dp"
            app:trackThickness="16dp" />
    </com.google.android.material.card.MaterialCardView>

    <com.google.android.material.textview.MaterialTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/cardMargin"
        android:text="@string/punctuality"
        android:textColor="@color/basicGrey"
        android:textSize="12sp" />

    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="15dp">

        <com.google.android.material.progressindicator.LinearProgressIndicator
            android:id="@+id/progressPunctuality"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:backgroundTint="@color/secondaryBlue"
            app:indicatorColor="@color/progressBarColor"
            app:trackCornerRadius="15dp"
            app:trackThickness="16dp" />
    </com.google.android.material.card.MaterialCardView>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/writeFeedbackButton"
        style="@style/Widget.MaterialComponents.Button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/defaultPadding"
        android:layout_marginBottom="@dimen/defaultPadding"
        android:padding="@dimen/defaultPadding"
        android:text="@string/leaveFeedback"
        android:textSize="20sp"
        android:textStyle="bold"
        app:cornerRadius="15dp" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/doctorProfileRWFeedback"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        tools:listitem="@layout/item_doctor_profile_feedback" />

</LinearLayout>