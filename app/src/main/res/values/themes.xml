<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Doct24_android" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/mainGreen</item>
        <item name="colorPrimaryVariant">@color/white</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorOnPrimary</item>
        <!-- Customize your theme here. -->
        <item name="android:textColor">@color/basicDark</item>
        <item name="fontFamily">@font/rubik</item>
        <item name="materialButtonStyle">@style/notCapsButton</item>
        <item name="materialCardViewStyle">@style/baseCard</item>
        <item name="android:textSize">@dimen/defTextSize</item>
    </style>

    <style name="searchTextField" parent="Widget.MaterialComponents.TextInputLayout.FilledBox">
        <item name="android:textColorHint">@color/basicGrey</item>
        <item name="boxBackgroundColor">@color/white</item>
        <item name="boxCornerRadiusTopStart">15dp</item>
        <item name="boxCornerRadiusTopEnd">15dp</item>
        <item name="boxCornerRadiusBottomStart">15dp</item>
        <item name="boxCornerRadiusBottomEnd">15dp</item>
        <item name="boxStrokeWidth">0dp</item>
        <item name="boxStrokeWidthFocused">0dp</item>
    </style>

    <style name="CustomTabStyle"
        parent="TextAppearance.AppCompat.Widget.ActionBar.Menu">
        <item name="android:textSize">18sp</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="notCapsButton" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/basicDark</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:elevation">2dp</item>
        <item name="android:textSize">13sp</item>
        <item name="android:outlineProvider">bounds</item>
        <item name="android:outlineSpotShadowColor">@color/basicGrey</item>
    </style>

    <style name="baseCard" parent="Widget.MaterialComponents.CardView">
        <item name="cardElevation">@dimen/cardMargin</item>
        <item name="cardCornerRadius">@dimen/defaultPadding</item>
        <item name="android:outlineSpotShadowColor">@color/basicGrey</item>
        <item name="android:outlineAmbientShadowColor">@color/white</item>
    </style>

    <style name="circleImageView" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>

    <style name="MyRatingBar" parent="Theme.AppCompat">
        <item name="colorControlNormal">@android:color/holo_green_light</item>
        <item name="colorControlActivated">@android:color/holo_orange_dark</item>
    </style>
</resources>